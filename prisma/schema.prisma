generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BrowserInstance {
  id        Int      @id @default(autoincrement())
  groupId   Int      @map("group_id")
  label     String
  remark    String?
  pid       Int?     @map("pid") // 进程ID
  status    String   @default("stopped") @map("status") // 浏览器状态: stopped, running
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("browser_instance")
}

model SystemSettings {
  varName String  @id @map("var_name")
  value   String?

  @@map("system_settings")
}
